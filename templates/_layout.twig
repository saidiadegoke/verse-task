<!doctype html>
<html>
    <head>
        <title>Homepage - Required</title>
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover" />
        <meta name="referrer" content="origin-when-cross-origin" />
        <link rel="stylesheet" type="text/css" href="css/style.css">
    </head>

    <body>
        <div class="wrapper">
            <nav class="nav-bar">
                <ul>
                    {% for nav in navigation.navLink.all() %}
                        {# Check if this item is the logo or link. As with this design Links and Logo are part of the main navigation #}
                        {% if nav.linkLogo %}
                            <li>
                                <div class="nav-icon">
                                    <a href="#">
                                        <img src="{{ nav.linkLogo.one().getURL() }}">
                                    </a>
                                </div>
                            </li>
                        {% else %}
                            <li><a {% if nav.linkLabel == 'Navigation 6' %} class="active" {% endif %} href="{{ url(nav.linkUrl) }}">{{ nav.linkLabel }}</a></li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </nav>

            {% block content %}
                {# Child template content goes here #}
            {% endblock %}
        </div>
    </body>
</html>